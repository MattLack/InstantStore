<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="1"
        tools:context=".MainActivity">

    <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="358dp"
            android:layout_height="294dp"
            android:background="@drawable/logo"
            tools:ignore="MissingConstraints" android:layout_marginEnd="308dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/linearLayoutCompat2"
            android:layout_marginTop="44dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.888"
            app:layout_constraintVertical_bias="0.048">

    </android.support.v7.widget.LinearLayoutCompat>
    <Button
            android:text="@string/btncadastr"
            android:textColor="#5555ff"
            android:background="@null"
            android:layout_width="179dp"
            android:layout_height="42dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/btnmainsign"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:onClick="goToSignUpActvity" android:layout_marginBottom="132dp"
            app:layout_constraintStart_toEndOf="@+id/linearLayoutCompat2" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/btnmainlogin"/>
    <Button
            android:text="@string/btnlogin"
            android:layout_width="248dp"
            android:layout_height="50dp"
            android:id="@+id/btnmainlogin"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="@drawable/buttonshapecollor"
            app:layout_constraintEnd_toEndOf="parent"
            android:onClick="gotoLoginActivity"
            android:layout_marginTop="104dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toEndOf="@+id/linearLayoutCompat2"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.594"
            android:layout_marginBottom="9dp" app:layout_constraintBottom_toTopOf="@+id/btnmainsign"
            tools:ignore="OnClick"/>


</android.support.constraint.ConstraintLayout>