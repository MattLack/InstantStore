<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ImageView
            android:layout_height="88dp" app:srcCompat="@drawable/ic_account_circle_200dp"
            android:id="@+id/img_demandNode" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_width="356dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/img_demandNode"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0" android:id="@+id/linearLayout">
        <TextView
                android:text="@string/tv_NClient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_NClient"
                android:layout_weight="1"
                tools:layout_editor_absoluteY="306dp" tools:layout_editor_absoluteX="29dp"/>
        <TextView
                android:text="instant@gmail.com"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_EntryEmail"
                android:layout_weight="2"
                tools:layout_editor_absoluteY="307dp" tools:layout_editor_absoluteX="195dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" android:id="@+id/linearLayout2">
        <TextView
                android:text="@string/tv_NCphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_NCphone"
                android:layout_weight="1"
                tools:layout_editor_absoluteY="354dp" tools:layout_editor_absoluteX="34dp"/>
        <TextView
                android:text="8888888888"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_EntryNumber"
                android:layout_weight="2"
                tools:layout_editor_absoluteY="354dp" tools:layout_editor_absoluteX="199dp"/>
    </LinearLayout>
    <TextView
            android:layout_width="0dp"
            android:layout_height="73dp"
            android:id="@+id/tv_comentDemand" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:gravity="center"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/btn_returnDemand"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="@string/tv_NComent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_NComent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_comentDemand" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.612"/>
    <Button
            android:text="@string/btn_return"
            android:layout_width="164dp"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonshapecollor"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:id="@+id/btn_returnDemand" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.499" android:onClick="DemandDetailBacktoMain"/>
</android.support.constraint.ConstraintLayout>