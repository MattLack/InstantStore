<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="1"
        tools:context=".SignUpActivity">

    <EditText
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/txtemail"
            android:hint="@string/txtHintEmail"
            tools:ignore="MissingConstraints"
            android:textSize="30sp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            tools:layout_editor_absoluteY="304dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/txtconfirmpass"
            android:hint="@string/tvconfirm_password"
            tools:ignore="MissingConstraints"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtpass"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/txtpass"
            android:hint="@string/txtHintPassword"
            android:textSize="30sp"
            tools:ignore="MissingConstraints"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtemail"/>

    <Button
            android:text="@string/tvsign_up"
            android:layout_width="272dp"
            android:layout_height="67dp"
            android:id="@+id/btn_signup"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="30sp"
            android:background="@drawable/buttonshapecollor"
            android:onClick="signUp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="144dp"
            app:layout_constraintTop_toBottomOf="@+id/txtconfirmpass"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textSize="40sp"
            android:text="@string/tvsign_up"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            android:layout_marginTop="64dp" app:layout_constraintHorizontal_bias="0.499"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/txtemail"/>
    <ImageView
            android:src="@drawable/ic_account_circle_200dp"
            android:layout_width="146dp"
            android:layout_height="107dp"
            android:id="@+id/imageView2" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textView"
            app:layout_constraintVertical_chainStyle="packed" app:layout_constraintVertical_bias="0.26"
            app:layout_constraintHorizontal_bias="0.493"/>

    <com.google.android.gms.common.SignInButton
            android:text="@string/btnsign_up_with_google"
            android:textColor="#5555ff"
            android:background="@null"
            android:layout_width="246dp"
            android:layout_height="67dp"
            android:id="@+id/btncadastr"
            android:drawableLeft="@drawable/icons8google48"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="216dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/btn_signup"/>


</android.support.constraint.ConstraintLayout>