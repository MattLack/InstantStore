<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:id="@+id/fragFormulary"
        android:layout_height="match_parent"
        android:alpha="1"
        tools:context=".FormularyActivity">

    <ImageView
            android:layout_width="446dp"
            android:layout_height="363dp" app:srcCompat="@drawable/ic_account_circle_200dp"
            android:id="@+id/img_photoform"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="2dp" android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_authorN" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:hint="@string/hint_phoneform"
            android:textSize="40sp"
            android:id="@+id/txt_phoneform" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="172dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="@string/btnsubmit"
            android:layout_width="156dp"
            android:layout_height="64dp"
            android:id="@+id/btnsubmit"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="30sp"
            android:background="@drawable/buttonshapecollor"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_phoneform" app:layout_constraintEnd_toStartOf="@+id/button2"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.51"
            android:onClick="SubmitFormulary" app:layout_constraintVertical_bias="0.491"/>
    <Button
            android:text="@string/btn_return"
            android:layout_width="301dp"
            android:layout_height="74dp"
            android:id="@+id/button2" android:layout_marginBottom="8dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="30sp"
            android:background="@drawable/buttonshapecollor"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_phoneform" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/btnsubmit"
            android:layout_marginStart="8dp" android:onClick="FormToBackScreen"/>
    <TextView
            android:text="Author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_authorN" android:layout_marginTop="80dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="80dp"
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/text_form"
            app:layout_constraintVertical_bias="0.338" app:layout_constraintStart_toEndOf="@+id/img_photoform"
            android:layout_marginStart="60dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/text_form"
            android:textSize="40sp"
            android:hint="@string/hint_form"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginEnd="8dp" android:layout_marginStart="8dp"
            android:layout_marginTop="100dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/txt_phoneform"
            app:layout_constraintVertical_bias="0.936"/>


</android.support.constraint.ConstraintLayout>