<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="1"
        tools:context=".LoginActivity">

    <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="571dp"
            android:layout_height="458dp"
            android:background="@drawable/logo"
            tools:ignore="MissingConstraints"
            android:id="@+id/linearLayoutCompat2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.727" app:layout_constraintVertical_bias="0.055">

    </android.support.v7.widget.LinearLayoutCompat>
    <Button
            android:text="@string/btncadastr"
            android:textColor="#5555ff"
            android:background="@null"
            android:layout_width="233dp"
            android:layout_height="72dp"
            android:id="@+id/btnmainsign"
            android:textSize="20sp"
            android:onClick="goToSignUpActvity"
            tools:ignore="MissingConstraints" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutCompat2"
            android:layout_marginEnd="52dp" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="@string/btnlogin"
            android:layout_width="223dp"
            android:layout_height="72dp"
            android:id="@+id/btnmainlogin"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:background="@drawable/buttonshapecollor"
            android:onClick="gotoLoginActivity"
            tools:ignore="MissingConstraints,OnClick"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutCompat2"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/btnmainsign"
            app:layout_constraintHorizontal_bias="0.631"/>


</android.support.constraint.ConstraintLayout>