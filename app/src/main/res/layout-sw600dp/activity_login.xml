<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="1"
        tools:context=".LoginActivity">

    <ImageView
            android:layout_width="192dp"
            android:layout_height="159dp"
            android:id="@+id/img_uploaded"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.6"
            android:src="@drawable/ic_account_circle_200dp" app:layout_constraintVertical_chainStyle="spread_inside"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:textSize="30sp"
            android:id="@+id/txtemail"
            android:hint="@string/txtHintEmail"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/txtpass" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/txtpass"
            android:hint="@string/txtHintPassword"
            android:textSize="30sp"
            tools:ignore="MissingConstraints" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtemail"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/btn_signup"/>
    <Button
            android:text="@string/btnlogin"
            android:layout_width="275dp"
            android:layout_height="76dp"
            android:id="@+id/btn_signup"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="@drawable/buttonshapecollor"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtpass"
            android:layout_marginEnd="8dp"
            android:textSize="30sp"
            android:onClick="goToMainScreenActvity"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.501" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btncadastr"/>
    <Button
            android:text="@string/btnlogg"
            android:textColor="#5555ff"
            android:background="@null"
            android:layout_width="366dp"
            android:layout_height="63dp"
            android:id="@+id/btncadastr"
            android:drawableStart="@drawable/icons8google48"
            android:textSize="30sp"
            android:onClick="goToMainScreenActvity"
            android:layout_marginBottom="84dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="46dp" app:layout_constraintTop_toBottomOf="@+id/btn_signup"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textSize="40sp"
            android:text="@string/tv_loginhere"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/txtemail" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.501"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/img_uploaded"/>


</android.support.constraint.ConstraintLayout>