<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="1"
        tools:context=".SignUpActivity">

    <EditText
            android:layout_width="678dp"
            android:layout_height="80sp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/txtusername"
            android:hint="@string/tvusername"
            android:textSize="20sp"
            tools:ignore="MissingConstraints"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/txtemail"
            android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintStart_toEndOf="@+id/imageView3" android:layout_marginStart="8dp"/>
    <EditText
            android:layout_width="674dp"
            android:layout_height="80sp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/txtemail"
            android:hint="@string/txtHintEmail"
            tools:ignore="MissingConstraints"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:textSize="20sp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtusername"
            android:layout_marginBottom="28dp" app:layout_constraintBottom_toTopOf="@+id/txtpass"
            app:layout_constraintStart_toEndOf="@+id/imageView3" android:layout_marginStart="8dp"/>
    <EditText
            android:layout_width="671dp"
            android:layout_height="80sp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/txtconfirmpass"
            android:hint="@string/tvconfirm_password"
            tools:ignore="MissingConstraints"
            android:textSize="20sp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtpass" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.088"
            app:layout_constraintStart_toEndOf="@+id/imageView3" android:layout_marginStart="8dp"/>
    <EditText
            android:layout_width="673dp"
            android:layout_height="80sp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/txtpass"
            android:hint="@string/txtHintPassword"
            android:textSize="20sp"
            tools:ignore="MissingConstraints"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/txtemail"
            app:layout_constraintStart_toEndOf="@+id/imageView3" android:layout_marginStart="8dp"/>

    <Button
            android:text="@string/tvsign_up"
            android:layout_width="195dp"
            android:layout_height="55dp"
            android:id="@+id/btnlogin"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:background="@drawable/buttonshapecollor"
            android:onClick="goToMainScreenActvity"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtconfirmpass" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/btncadastr" app:layout_constraintHorizontal_bias="0.123"
            app:layout_constraintVertical_bias="0.566"/>
    <Button
            android:text="@string/btnsign_up_with_google"
            android:textColor="#5555ff"
            android:background="@null"
            android:layout_width="360dp"
            android:layout_height="51dp"
            android:id="@+id/btncadastr"
            android:drawableStart="@drawable/icons8google48"
            android:textSize="20sp"
            android:onClick="goToMainScreenActvity"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtconfirmpass" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.581"
            app:layout_constraintStart_toEndOf="@+id/btnlogin" android:layout_marginStart="8dp"/>
    <ImageView
            android:src="@drawable/ic_account_circle_200dp"
            android:layout_width="286dp"
            android:layout_height="298dp"
            android:id="@+id/imageView3" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintVertical_bias="0.346"/>
    <TextView
            android:text="@string/tvsign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:textSize="30sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/txtusername"
            app:layout_constraintHorizontal_bias="0.588"
            app:layout_constraintVertical_bias="0.207"/>


</android.support.constraint.ConstraintLayout>